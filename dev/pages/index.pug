extends ../template/template.pug
block content
	.page
		main.main
			.container
				.flex-container.align-justify
					.flex-container.align-middle.options
						+button('button')(data="#btc").button-crypto.active BTC
						+button('button')(data="#eth").button-crypto ETH
						+button('button')(data="#xrp").button-crypto XRP
						+button('button')(data="#ltc").button-crypto LTC
						+button('button')(data="#bch").button-crypto BCH
						+button('button')(data="#ada").button-crypto ADA
						+button('button')(data="#qtum").button-crypto QTUM
					.flex-container.align-middle.options
						+button('button')(data="usd").button-currency.active USD
						+button('button')(data="eur").button-currency EUR

			.container#pricing-packages