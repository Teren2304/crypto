mixin range(value)
	.range&attributes(attributes)
		.range__wrapper
			input(type="range", id="currency-slider", min="0", max="100", value="0", step="0.0001", oninput="updateRangeInput(this)")
			.flex-container.align-middle.align-justify
				p.font.range__min
				p.font.range__middle
				p.font.range__max
		.flex-container
			.block-input.cut
				input(type="number", id="field-crypto").field
				p.font.text-uppercase.label-crypto
			.block-input.cut
				p.font.text-uppercase.label-currency
				input(type="number", id="field-currency").field